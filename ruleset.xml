<?xml version="1.0"?>
<ruleset name="Custom">
    <description>PSR12, custom linelength check.</description>
    <!-- Warn about lines longer than 240 chars, and never error. -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="240" />
            <property name="absoluteLineLimit" value="0" />
        </properties>
    </rule>
    <!-- To specify the end of line character. -->
    <rule ref="Generic.Files.LineEndings">
        <properties>
            <property name="eolChar" value="\r\n"/>
        </properties>
    </rule>
</ruleset>